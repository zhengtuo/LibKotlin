<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.drelovey.realize.arouter.RouterPath" />

        <import type="com.drelovey.realize.binding.listener.CommonBinding" />

        <variable
            name="vm"
            type="com.drelovey.realize.ui.main.viewModel.MainVM" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.main.view.MainActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="@{3}"
            app:hideLine="@{true}"
            app:title="@{vm.title}" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shader(着色器)"
            app:isDelayed="@{true}"
            android:tag="@{RouterPath.PATH_SHADER}"
            app:onClickCommand="@{CommonBinding.jumpCommand.setData(RouterPath.PATH_MEASURE_LAYOUT)}"
            app:viewModel="@{vm}" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="measure_layout"
            app:isDelayed="@{true}"
            android:tag="@{RouterPath.PATH_MEASURE_LAYOUT}"
            app:onClickCommand="@{CommonBinding.jumpCommand.setData(RouterPath.PATH_MEASURE_LAYOUT)}"
            app:viewModel="@{vm}" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@{RouterPath.PATH_DRAWABLE_DSL}"
            android:text="drawable_dsl"
            app:isDelayed="@{true}"
            app:onClickCommand="@{CommonBinding.jumpCommand.setData(RouterPath.PATH_DRAWABLE_DSL)}"
            app:viewModel="@{vm}" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AOP测试"
            app:isDelayed="@{true}"
            app:onClickCommand="@{CommonBinding.jumpCommand.setData(RouterPath.PATH_COROUTINES)}"
            app:viewModel="@{vm}" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> CommonBinding.jumpClick.click(RouterPath.PATH_COROUTINES)}"
            android:text="协程" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> CommonBinding.jumpClick.click(RouterPath.PATH_WHATIF)}"
            android:text="whatif" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> CommonBinding.jumpClick.click(RouterPath.PATH_CONSTRAINT)}"
            android:text="ConstraintLayout" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</layout>
